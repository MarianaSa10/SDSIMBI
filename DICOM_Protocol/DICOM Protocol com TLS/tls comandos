sudo mv /etc/orthanc/pki/orthanc.crt /etc/orthanc/orthanc.crt
sudo mv /etc/orthanc/pki/orthanc.key /etc/orthanc/orthanc.key
sudo chown orthanc:orthanc /etc/orthanc/orthanc.*
sudo chmod 644 /etc/orthanc/orthanc.crt
sudo chmod 600 /etc/orthanc/orthanc.key


# Criar chave e pedido de certificado
sudo openssl req -newkey rsa:2048 -nodes \
  -keyout /etc/orthanc/client.key \
  -out /etc/orthanc/client.csr \
  -subj "/CN=CLIENT"

# Assinar o certificado do cliente (self-signed ou com a mesma chave CA se quiseres)
sudo openssl x509 -req \
  -in /etc/orthanc/client.csr \
  -signkey /etc/orthanc/client.key \
  -out /etc/orthanc/client.crt \
  -days 365
  
  sudo openssl pkcs12 -export \
  -in /etc/orthanc/orthanc.crt \
  -out /etc/orthanc/orthanc.p12 \
  -name orthanc \
  -passout pass:password
  
  
  sudo openssl pkcs12 -export \
  -inkey /etc/orthanc/client.key \
  -in /etc/orthanc/client.crt \
  -name dcm4che-client \
  -out /etc/orthanc/dcm4che.p12 \
  -passout pass:password


sudo chown mariana:mariana /etc/orthanc/dcm4che.p12
sudo chmod 600 /etc/orthanc/dcm4che.p12



